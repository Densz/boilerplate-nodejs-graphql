{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module"
  },
  "extends": ["prettier"],
  "rules": {
    "arrow-body-style": 0,
    "arrow-parens": ["error", "as-needed"],
    "no-plusplus": 0,
    "class-methods-use-this": 0,
    "no-restricted-globals": 1,
    "comma-dangle": ["error", "always-multiline"],
    "no-console": 0,
    "indent": ["error", "tab"]
  }
}
